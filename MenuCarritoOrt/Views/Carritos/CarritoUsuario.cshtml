@model MenuCarritoOrt.Models.Carrito

@{
    ViewData["Title"] = "Carrito";
}

<h1>Mi Carrito</h1>
<p>
    <a asp-action="AgregarAlCarrito" asp-controller="Carritos">Agregar Productos</a>
</p>
