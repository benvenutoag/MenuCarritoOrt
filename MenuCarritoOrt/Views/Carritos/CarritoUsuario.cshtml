        <a asp-action="VaciarCarrito" asp-controller="Carritos" asp-route-id="@Model.Id">Vaciar Carrito</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Producto
            </th>

            <th>
                Precio
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.Productos)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>

                </tr>
            }
        }

    </tbody>
</table>