@model MenuCarritoOrt.Models.Carrito 

@{
    ViewData["Title"] = "Carrito";
}

<h1>Mi Carrito</h1>
<p>
        <a asp-action="Index" asp-controller="Productos">Agregar Productos</a>
    </p>
    <p>
        <a asp-action="Vaciar" asp-controller="Carritos" asp-route-id="@Model.Id">Vaciar Carrito</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                Producto
            </th>

            <th>
                Precio
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Session["carrito"] != null)
            {
                foreach(var item in Session["carrito"] as List<MenuCarritoOrt.Models.CarritoItem>)
                {
                     <tr>

                         <td>@item.Producto.IdProducto</td>
                         <td>@item.Producto.Nombre</td>
                         <td>@item.Producto.Precio</td>

                      </tr>
                }
            }

    </tbody>
</table>