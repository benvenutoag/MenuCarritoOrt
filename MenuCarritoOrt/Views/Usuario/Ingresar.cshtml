@model MenuCarritoOrt.Models.Usuario

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<h1>Ingresar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Ingresar">
            <div class="text-danger">@ViewBag.ErrorEnLogin</div>
            <div class="form-group text-black-50">
                <label for="Email" class="control-label">Usuario</label>
                <input name="Email" class="form-control" />
            </div>
            <div class="form-group text-black-50">
            <label for="Password" class="control-label">Contraseña</label>
            <input name="Password" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Ingresar" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Create">Registrarse</a>
        </div>
        
        <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">Volver atrás</a>
    </form>
</div>
</div>